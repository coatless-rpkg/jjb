year <- sub("-.*", "", meta$Date)
note <- sprintf("R package (version %s)", meta$Version)

citHeader("To cite balamuta in publications use:")
citEntry(entry = "Misc",
         title = "Balamuta R Functions",
         author = person("James", "Balamuta"),
         year = year,  
         howpublished = note,
         note = "GitHub repository: \\url{https://github.com/coatless/balamuta}",
         url = "https://cran.r-project.org/package=balamuta",
         textVersion =
           paste0("James Balamuta (", year,"). Balamuta R Functions. ",
                  note, ". GitHub repository: https://github.com/coatless/balamuta.")
)